public class prime_number {
    public static void main(String[] args) {

        for (int n = 1; n <= 100; n = n + 1) {

            int sum = 0;

            for (int i = 1; i < n; i = i + 1) {
                if (n % i == 0) {
                    /*System.out.println(i);*/
                    sum = sum + i;
                }
            }
            if (sum == n) {
                System.out.println(n);
                System.out.println("perfect number");
            }
        }
    }
}
