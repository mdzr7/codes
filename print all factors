public class Print_all_factors {
    public static void main(String[] args) {
        int n =28;
        int sum = 0;

        for (int i=1;i<n;i=i+1){
            if (n%i==0){
                sum = sum+i;
                System.out.println(i);
            }
        }
        if (n==sum){
            System.out.println("perfect number");
        }
        else {
            System.out.println("not a perfect number");
        }
    }
}
