package payilagam;

public class find_odd_or_even {
    public static void main(String[] args) {
        int a[] = {7, 5, 4, 3, 2, 1, 0, 11, 5, 4, 6, 8, 9, 2};
        int count = 0;
        for (int i = 0; i < a.length; i = i + 1) {
            if (a[i] % 2 == 0) {
                count = count + 1;
            }
        }
        System.out.println("the count of even number is " + count);
        System.out.println("the count of odd number is " + (a.length - count));
    }

}
